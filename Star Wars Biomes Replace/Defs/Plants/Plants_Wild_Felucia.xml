<?xml version="1.0" encoding="utf-8"?>

<Defs>
	
	<ThingDef ParentName="PlantBase">
		<defName>Plant_FeluciaGrass</defName>
		<label>grass</label>
		<description>Wild grass on felucia. Grows anywhere there is a little light and minimally fertile ground.</description>
		<statBases>
			<MaxHitPoints>90</MaxHitPoints>
			<Flammability>1.3</Flammability>
			<Nutrition>0.16</Nutrition>
    </statBases>
		<pathCost>15</pathCost>
		<graphicData>
			<texPath>Plants/FeluciaGrass</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible />
		<plant>
			<fertilitySensitivity>0.7</fertilitySensitivity>
			<growDays>3</growDays>
			<harvestWork>60</harvestWork>
			<maxMeshCount>9</maxMeshCount>
			<visualSizeRange>
				<min>0.7</min>
				<max>0.85</max>
			</visualSizeRange>
			<topWindExposure>0.4</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>10</wildClusterWeight>
			<wildOrder>1</wildOrder>
		</plant>
	</ThingDef>
	
	<ThingDef ParentName="BushBase">
		<defName>Plant_FeluciaPlant</defName>
		<label>Felucia plant</label>
		<description>A plant from the jungle planet felucia.</description>
		<graphicData>
			<texPath>Plants/FeluciaPlant</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.2, 0.35, 0.13)</volume>
        		<offset>(-0.03,0,-0.44)</offset>
			</shadowData>
		</graphicData>
		<plant>
			<growDays>3</growDays>
			<leaflessGraphicPath>Plants/FeluciaPlant</leaflessGraphicPath>
			<visualSizeRange>
            	<min>2.5</min>
            	<max>3.0</max>
      		</visualSizeRange>
		</plant>
	</ThingDef>
	
	<ThingDef ParentName="BushBase">
		<defName>Plant_FeluciaBloomPlant</defName>
		<label>Felucia bloom plant</label>
		<description>A plant from the jungle planet felucia.</description>
		<graphicData>
			<texPath>Plants/FeluciaBloomPlant</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.2, 0.35, 0.13)</volume>
        		<offset>(-0.03,0,-0.44)</offset>
			</shadowData>
		</graphicData>
		<plant>
			<growDays>3</growDays>
			<leaflessGraphicPath>Plants/FeluciaBloomPlant</leaflessGraphicPath>
			<visualSizeRange>
            	<min>0.8</min>
            	<max>1.8</max>
      		</visualSizeRange>
		</plant>
	</ThingDef>
	
	<ThingDef ParentName="TreeBase">
    <defName>Plant_FeluciaSegmentPlant</defName>
    <label>Felucia segment plant</label>
    <description>A plant from the jungle planet felucia.</description>
    <graphicData>
      <texPath>Plants/FeluciaSegmentPlant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.2, 0.35, 0.13)</volume>
        <offset>(-0.03,0,-0.44)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <Beauty>1</Beauty>
    </statBases>
    <plant>
	  <growDays>25</growDays>
	  <harvestWork>1000</harvestWork>
      <harvestYield>38</harvestYield>
      <wildClusterWeight>35</wildClusterWeight>
	  <visualSizeRange>
            <min>3.2</min>
            <max>3.8</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

</Defs>